<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:ndroid="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.youwei.mymyotee.MainActivity">

    <RelativeLayout
        android:layout_alignParentTop="true"
        android:layout_marginBottom="50dp"
        android:id="@+id/layout_top"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >
        <ImageButton
            android:layout_marginRight="10dp"
            android:scaleType="centerInside"
            android:layout_width="30dp"
            android:layout_height="25dp"
            android:id="@+id/bt_homepage_sound_on"
            android:background="#00000000"
            android:src="@drawable/bt_homepage_sound_on"/>

        <ImageButton
            android:layout_toRightOf="@id/bt_homepage_sound_on"
            android:scaleType="centerInside"
            android:layout_width="30dp"
            android:layout_height="25dp"
            android:id="@+id/bt_homepage_share_up"
            android:background="#00000000"
            android:src="@drawable/bt_homepage_share_up"/>

        <ImageButton
           android:layout_alignParentRight="true"
            android:scaleType="centerInside"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:id="@+id/bt_yijianfankui_up"
            android:background="#00000000"
            android:src="@drawable/bt_yijianfankui_up"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_marginLeft="45dp"
        android:orientation="vertical"
        android:layout_below="@id/layout_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        >
        <ImageView
            android:scaleType="centerInside"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:id="@+id/pic_startpage_logo_faceq_imageView" />
        <TextView
            android:layout_marginBottom="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="创造你的卡通形象！"
            android:textSize="12dp"
            />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageButton
                android:background="#00000000"
                android:scaleType="centerInside"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:id="@+id/bt_man_up"
                android:src="@drawable/bt_man_up"
                />
            <ImageButton
                android:background="#00000000"
                android:scaleType="centerInside"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:id="@+id/bt_woman_up"
                android:src="@drawable/bt_woman_up"
                />
        </LinearLayout>
        <ImageButton
                android:background="#00000000"
                android:scaleType="centerInside"
                android:layout_width="240dp"
                android:layout_height="46dp"
                android:id="@+id/bt_double_up"
                android:src="@drawable/bt_double_up"
                />
        <ImageButton
            android:background="#00000000"
            android:scaleType="centerInside"
            android:layout_width="240dp"
            android:layout_height="46dp"
            android:id="@+id/bt_history_up"
            android:src="@drawable/bt_history_up"
            />
        <ImageButton
            android:background="#00000000"
            android:scaleType="centerInside"
            android:layout_width="240dp"
            android:layout_height="46dp"
            android:id="@+id/bt_more_up"
            android:src="@drawable/bt_more_up"
            />
    </LinearLayout>

    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <ImageButton
            android:background="#00000000"
            android:scaleType="centerInside"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/pic_startpage_joinus"
            android:src="@drawable/pic_startpage_joinus"
            />
        <ImageView
            android:background="#00000000"
            android:layout_centerInParent="true"
            android:scaleType="centerInside"
            android:layout_width="120dp"
            android:layout_height="25dp"
            android:id="@+id/pic_startpage_aboutus"
            android:src="@drawable/pic_startpage_aboutus"
            />
        <ImageButton
            android:background="#00000000"
            android:scaleType="centerInside"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:id="@+id/pic_startpage_team"
            android:src="@drawable/pic_startpage_team"
            />
    </RelativeLayout>
</RelativeLayout>
